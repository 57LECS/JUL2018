<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarDetail.CalendarDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlyHeadDH"

        android:background="@color/BlueSalle">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgBackDM"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:rotation="180"
            android:src="@mipmap/ic_more"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logo_lasallistas"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_trophy"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_sportDM"
                    android:text="Futbol uruguayo"
                    android:textStyle="italic"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/redSalle"
                    android:layout_weight="1"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Team1DM"
                    android:text="BajÃ­o"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/BlueSalle"
                    android:textSize="35sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Team1ScoreDM"
                    android:text="0"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="35sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Team2DM"
                    android:text="Neza"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/BlueSalle"
                    android:textSize="35sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Team2ScoreDM"
                    android:text="0"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="35sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_calendar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dateDM"
                    android:text="19 de noviembre de 2018"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_weight="1"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_location"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_placeDM"
                    android:text="Cancha de futbol uruguayo"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_weight="1"
                    android:textSize="15dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Incidencias:"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>